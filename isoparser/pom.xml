<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.coremedia.drm.isobox4j</groupId>
  <artifactId>isoparser</artifactId>
  <packaging>jar</packaging>
  <name>ISO Parser</name>
  <description>A generic parser and writer for all ISO 14496 based files (MP4, Quicktime, DCF, PDCF, ...)</description>
  <version>142-SNAPSHOT</version>

  <repositories>
    <repository>
      <id>coremedia.isobox4j.repository</id>
      <name>CoreMedia Contributions IsoBox4j Maven Repository</name>
      <url>https://repository.coremedia.com/nexus/content/repositories/contributions-open-releases/</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-9</version>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>

      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>

        <executions>
          <execution>
            <id>signit</id>
            <phase>package</phase>
            <goals>
              <goal>sign</goal>
            </goals>
            <configuration>
              <keystore>${project.basedir}/src/etc/keystore.jks</keystore>
              <alias>isobox4j</alias>
              <keypass>xxxxxx</keypass>
              <storepass>xxxxxx</storepass>
              <skip>false</skip>
              <verbose>true</verbose>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <parent>
    <groupId>com.coremedia.drm</groupId>
    <artifactId>isobox4j-parent</artifactId>
    <version>6</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>junit-addons</groupId>
      <artifactId>junit-addons</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <scm>
    <connection>scm:svn:https://contributions.coremedia.com/svn/isobox4j/tags/isoparser-138</connection>
  </scm>
</project>
